# Parklense Authentication Service Environment Variables
# This template should be used to create secrets in AWS Secrets Manager

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-django-key-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=auth.parklense.com,auth-api.parklense.com,localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgres://username:password@hostname:5432/database_name
DB_NAME=parklense_auth_prod
DB_USER=parklense_user
DB_PASSWORD=secure-database-password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://your-redis-endpoint:6379/0
CACHE_URL=redis://your-redis-endpoint:6379/1

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=support@heycampus.in
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=HeyCAMPUS <noreply@heycampus.in>
SERVER_EMAIL=HeyCAMPUS <server@heycampus.in>

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=parklense-auth-media
AWS_S3_REGION_NAME=ap-south-1
USE_S3=True

# Google OAuth Configuration
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# JWT Configuration
JWT_SIGNING_KEY=your-jwt-signing-key-keep-this-secret
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://heycampus.in,https://www.heycampus.in,https://app.heycampus.in

# Security Configuration
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-url
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
RELEASE_VERSION=v1.0.0

# Application-specific Configuration
DEFAULT_USER_AVATAR_URL=https://cdn.parklense.com/avatars/default.png
PASSWORD_RESET_TIMEOUT=3600
EMAIL_VERIFICATION_TIMEOUT=86400
OTP_EXPIRY_SECONDS=300
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_LOCKOUT_SECONDS=1800

# Feature Flags
ENABLE_EMAIL_VERIFICATION=True
ENABLE_SMS_VERIFICATION=True
ENABLE_GOOGLE_AUTH=True
ENABLE_PASSWORD_RESET=True
ENABLE_RATE_LIMITING=True

# Environment Specific
ENVIRONMENT=production
LOG_LEVEL=INFO

# Backup and Recovery
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Configuration
GUNICORN_WORKERS=4
CELERY_WORKER_CONCURRENCY=4
REDIS_MAX_CONNECTIONS=50

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
READINESS_CHECK_TIMEOUT=10 